{
  "name": "market-snapshot-bot",
  "version": "1.0.0",
  "description": "Automated Indian stock market snapshot bot for Twitter",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "docker:build": "docker build -t market-snapshot-bot .",
    "docker:run": "docker run -p 3000:3000 --env-file .env market-snapshot-bot"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "twitter-api-v2": "^1.15.1",
    "winston": "^3.11.0",
    "moment-timezone": "^0.5.43"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "@types/node-cron": "^3.0.11",
    "jest": "^29.7.0",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
